<h1>Listing Reviews</h1>

<table>
	<tr>
		<th>Rating</th>
		<th>Reviewer</th>
		<th>Body</th>
		<th colspan = "2"></th>
	</tr>

	<% @reviews.each do |review| %>
		<tr>
			<td><%= review.rating %></td>
			<td><%= review.reviewer %></td>
			<td><%= review.title %></td>
			<td><%= link_to 'Detail', review_path(review) %></td>
			<% if @current_profile_id == review.reviewer_id %>
				<td><%= link_to 'Update', edit_review_path(review) %></td>
				<td><%= link_to 'Delete', review_path(review), method: :delete, data: { confirm: 'The review will be deleted!'} %></td>
			<% end %>
		</tr>
	<% end %>
</table>

<%= link_to 'Back', profile_path(@profile) %>