<div class="content content-boxed">
	<div class="row">
		<div class="col-lg-12">
			<div class="hpanel blog-article-box">
				<div class="panel-heading">
					<h4><%= @review.title %></h4>
					<h5>Rating for <%= "#{@profile.user.email}" %> is: <strong><%= @review.rating %></strong></h5>
					<div class="text-muted small">
						Created by: <span class="font-bold"><%= @review.reviewer %></span> on <%= @review.updated_at.strftime '%B %d, %Y, %H:%M %p' %>
					</div>
				</div>
				<div class="panel-body">
					<p>
						<%= @review.body %>
					</p>
				</div>
				<div class="panel-footer">
					<% if @current_profile_id == @review.reviewer_id %>
						<a href=<%=edit_review_path(@review, :contract_id => @review.contract_id) %> class="btn btn-info btn-xs">
							<i class="fa fa-paste"></i>
							Edit
						</a>
						<a href=<%=profile_reviews_path(@profile) %> class="btn btn-primary btn-xs">
							<i class="fa fa-arrow-left"></i>
							Back
						</a>
					<% else %>
						<a href=<%=profile_reviews_path(@profile) %> class="btn btn-primary btn-xs">
							<i class="fa fa-arrow-left"></i>
							Back
						</a>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
