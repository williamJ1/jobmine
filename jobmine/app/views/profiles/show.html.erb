<script src="//maps.google.com/maps/api/js?key=AIzaSyAJ0uVPgvJxE6RGOeeucwwfcFNUtwR6_74"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
<h1>Here is the profile</h1>

<p>
  <%= flash[:notice] %>
  <b>Address:</b><br>
  <%= @show_user_profile.address %><br>

  <b>Phone number:</b><br>
  <%= @show_user_profile.phone_num %><br>

  <b>Gender:</b><br>
  <%= @show_user_profile.gender %><br>

  <% if @full_access %>
    <b>Your user type:</b><br>
    <%= @show_user_profile.user_type %><br>
  <% end %>

  <b>Your average rating:</b><br>
  <% if @has_review %>
    <%= @show_user_profile.average_rating.round(2) %><br>
  <% else %>
    <%= "No review yet!" %><br>
  <% end %>
</p>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
    document.addEventListener("turbolinks:load", function(){
        handler = Gmaps.build('Google');
        handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
            markers = handler.addMarkers(<%=raw @hash.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
        });
    } );
</script>

<table>
  <tr>
    <th>Rating</th>
    <th>Reviewer</th>
    <th>Title</th>
    <th>Reviewed at</th>
    <th colspan = "2"></th>
  </tr>

  <% @reviews.order(id: :desc).limit(3).each do |review| %>
    <tr>
      <td><%= review.rating %></td>
      <td><%= review.reviewer %></td>
      <td><%= review.title %></td>
      <td><%= review.created_at %></td>
      <td><%= link_to 'Detail', review_path(review) %></td>
    </tr>
  <% end %>
</table>

<% if @more_review %>
  <p><%= link_to 'More', profile_reviews_path(@show_user_profile.id) %></p>
<% end %>


