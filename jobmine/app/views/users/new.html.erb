<h1>Sign Up</h1>

<p>
  <%= flash[:warning] %>
</p>


<%= form_for :user, url: users_path do |t|%>
    <p>
      <%= t.label :email %> <br>
      <%= t.text_field :email %>
    </p>

    <p>
      <%= t.label :password %> <br>
      <%= t.password_field :password%>
    </p>

    <p>
      <%= t.label :password_confirmation%> <br>
      <%= t.password_field :password_confirmation%>
    </p>

    <%= t.submit 'Sign up' %>



<%end%>
