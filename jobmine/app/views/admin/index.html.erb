<div class="content">
  <span class="text-warning"><h3><%= flash[:notice] %></h3></span>
  <div class="row">
    <div class="col-lg-12 text-center welcome-message">
      <h2>
        <strong>Admin home page</strong>
      </h2>

      <h3>As admin, you are able to suspend and delete any account</h3>

    </div>
  </div>

  <div class="row">

    <div class="col-lg-6">
      <div class="hpanel">
        <div class="panel-heading">
          <div class="panel-tools">
            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
            <a class="closebox"><i class="fa fa-times"></i></a>
          </div>
          <h4>All current teenagers:</h4>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table cellpadding="1" cellspacing="1" class="table table-condensed table-striped">
              <thead>
              <tr>
                <th>User name</th>
                <th>Account Status</th>
                <th>Address</th>
              </tr>
              </thead>
              <tbody>
              <%= form_tag(suspend_timeslot_path, method: :put) do%>
                  <% for teen in @all_teen%>
                      <tr>
                        <td>
                          <%= check_box_tag 'teen_id[]', teen.user.id %>
                          <%= teen.user.email %>
                        </td>
                        <td><%= teen.user.account_status %></td>
                        <td><%= teen.address %></td>
                      </tr>
                  <% end %>
                  <% if !@all_teen.blank?() %>
                      <%= submit_tag 'Activate', name: 'Activate', class:"btn btn-primary" %>
                      <%= submit_tag 'Suspend', name: 'Suspend', class:"btn btn-danger" %>
                  <% end%>
              <% end %>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>


    <div class="col-lg-6">
      <div class="hpanel">
        <div class="panel-heading">
          <div class="panel-tools">
            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
            <a class="closebox"><i class="fa fa-times"></i></a>
          </div>
          <h4>All current employers:</h4>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table cellpadding="1" cellspacing="1" class="table table-condensed table-striped">
              <thead>
              <tr>
                <th>User name</th>
                <th>Account Status</th>
                <th>Address</th>
              </tr>
              </thead>
              <tbody>
              <%= form_tag(suspend_timeslot_path, method: :put) do%>
                  <% for emp in @all_employer%>
                      <tr>
                        <td>
                          <%= check_box_tag 'teen_id[]', emp.user.id %>
                          <%= emp.user.email %>
                        </td>
                        <td><%= emp.user.account_status %></td>
                        <td><%= emp.address %></td>
                      </tr>
                  <% end %>
                  <% if !@all_employer.blank?() %>
                      <%= submit_tag 'Activate', name: 'Activate', class:"btn btn-primary" %>
                      <%= submit_tag 'Suspend', name: 'Suspend', class:"btn btn-danger" %>
                  <% end%>
              <% end %>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>
