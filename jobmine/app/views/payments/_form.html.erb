<%= form_with model: @payment, local: true do |form| %>
	
	<% if @payment.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@payment.errors.count, "error") %> prohibited this article from being saved:
			</h2>
			<ul>
				<%= @payment.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>


	<p>
		<%= form.label :card_holder_name %><br>
		<%= form.text_field :card_holder_name, in: 0.0..5.0, step: 0.5 %>
	</p>

	<p>
		<%= form.label :card_num %><br>
		<%= form.number_field :card_num, step: 0.5 %>
	</p>

	<!-- date selector -->       
	<head>
 	 <meta charset="utf-8">
	  <meta name="viewport" content="width=device-width, initial-scale=1">
	  <title>jQuery UI Datepicker - Default functionality</title>
	  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
	  <link rel="stylesheet" href="/resources/demos/style.css">
	  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
	  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
	  <script>
	  $( function() {
	    $( "#datepicker" ).datepicker();
	  } );
	  </script>
	</head>

	<body><p>Exp Date:</br> <input type="text" id="datepicker"></p>	</body>

	<p>
		<%= form.submit %>
	</p>
<% end %>
