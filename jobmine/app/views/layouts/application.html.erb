<!DOCTYPE html>
<html>
  <head>
    <title>Jobmine</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script>
        $( document ).ready(function(){
            $( ".datepicker" ).datepicker({ dateFormat: 'yy/mm/dd' });
        } );
    </script>
  </head>

  <body class="fixed-navbar sidebar-scroll">
    <%= render "shared/header" %>
    <!-- Navigation -->

    <aside id="menu">
      <% if @user = User.find_by(id: session[:current_user_id])%>
      <div id="navigation">
        <div class="profile-picture">
          <%= image_tag "logo.png", size: "100x100"%>
            <div>
              <h4 class="font-extra-bold m-b-xs">
                Hi, <%=@user.email.split("_").first%>
              </h4>
            </div>
          </div>

      <%end%>
        <ul class="nav" id="side-menu">
          <li>
            <%= link_to "About", shared_about_path%>
          </li>
          <li>
            <%= link_to "Contact Us", shared_contact_us_path%>
          </li>
          <li>
            <%= link_to "FAQ", shared_faq_path%>
          </li>
          <li>
            <%= link_to "Privacy Policy", shared_privacy_policy_path%>
          </li>
          <li>
            <%= link_to "Site Map", shared_site_map_path%>
          </li>
          <li>
            <%= link_to "Terms of Service", shared_terms_of_service_path%>
          </li>
        </ul>
      </div>
    </aside>
    <div id="wrapper">
      <%= yield %>
      <%= render "shared/footer" %>
    </div>

  </body>
</html>
