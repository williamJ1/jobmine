<h1>Log in</h1>

<p>
  <%= flash[:warning] %>
</p>

<%=form_for :login, url: login_path do |t|%>
  <p>
    <%= t.label :email%>
    <%= t.text_field :email %>
  </p>

    <p>
      <%= t.label :password %>
      <%= t.password_field :password %>
    </p>

    <p>
      <%= t.submit value: 'Log in' %>
    </p>

    <%= link_to "(forgot password)", new_password_reset_path %>

<%end%>